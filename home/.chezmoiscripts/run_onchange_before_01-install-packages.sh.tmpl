#!/bin/sh
{{ if eq .osid "linux-arch" }}

#Install yay of not available
if ! [ -x "$(command -v yay)" ]; then
  sudo pacman --noconfirm -S --needed git base-devel && 
  git clone https://aur.archlinux.org/yay.git && cd yay && \
  makepkg -sf --noconfirm && \
  sudo pacman --noconfirm -U yay-*.zst && \
  cd ../yay && rm -rf yay
fi

SHELL_PACKAGES="\
    zsh \
    zsh-thefuck-git \
    ttf-jetbrains-mono-nerd \
"

DEV_PACKAGES="\
    base-devel \
"

HARDWARE_PACKAGES="\
    evdi \
    displaylink \
"

UTILS_PACKAGES="\
    docker \
    docker-compose \
    docker-buildx \
    google-chrome \
    vtop \
    bmap-tools \
    can-utils \
    dropbox \
    programmer-calculator \
"

HYPRLAND_DE="\
    ttf-font-awesome \
    ttf-jetbrains-mono-nerd \
    ttf-iosevka-nerd \
    waybar-hyprland-git \
    waybar-updates \
    rofi \
    dunst \
    kitty \
    starship \
    swaybg \
    swaylock-effects-git \
    swayidle \
    pamixer \
    brightnessctl \
    canva \
    grim \
    slurp \
    swappy \
    pavucontrol \
    nemo \
    sddm-theme-tokyo-night \
    pacman-contrib \
    nwg-look-bin \
    font-manager \
"

yay -Sy --noconfirm --needed \
    $SHELL_PACKAGES \
    $HARDWARE_PACKAGES \
    $DEV_PACKAGES \
    $UTILS_PACKAGES \
    $HYPRLAND_DE

# Install rofi-addons
if [ -d rofi-addons-pkg ]; then
rm -rf rofi-addons-pkg
fi

git clone https://github.com/julian-poidevin/rofi-addons-pkg.git && \
cd rofi-addons-pkg && \
makepkg -sf --noconfirm && \
sudo pacman --noconfirm -U rofi-addons-*.zst && \
cd ../ && rm -rf rofi-addons-pkg

# Add user to the docker group
getent group docker || sudo groupadd docker
sudo usermod -aG docker $USER
newgrp docker

{{- if eq .chezmoi.hostname "work-archlinux" }}
# Install extra packages needed for work
yay -Sy --noconfirm --needed \
    picoscope7beta

# Add user to the pico group (for picoscope software)
sudo usermod $USER --append --group pico
{{- end }}

{{ end -}}